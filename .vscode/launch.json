{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "function-api debug mode",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "outputCapture": "std", // Necessary to be able to see logging in the debug console
      "restart": true,
      "cwd": "${workspaceFolder}/api/function-api/"
    }
  ]
}
